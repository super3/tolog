{
  "name": "tolog",
  "productName": "Tolog",
  "version": "0.1.0",
  "description": "An open-source markdown-based note-taking app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite dev & wait-on http://localhost:5173 && electron . --dev",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .js,.vue",
    "test": "vitest"
  },
  "build": {
    "appId": "com.tolog.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "icon": "public/icon.icns"
    },
    "win": {
      "icon": "public/icon.ico"
    },
    "linux": {
      "icon": "public/icon.png"
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "marked": "^11.0.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0",
    "vuetify": "^3.7.5"
  }
}
